<div class="overlay-container">
  <div class="bread-nav">
    <div class="container-fluid">
      <div class='row'>
        {{#link-to 'contact' class='col text-left'}}<i class="fas fa-caret-circle-up"></i> Back{{/link-to}}
      </div>
    </div>
  </div>
  <div class="outer">
    <div class='overlay'>
      <div class="content-wrapper">
        <div class="container-fluid">
          <div class='row align-self-center justify-content-center'>
            <h1 class="text-center mb-3 mb-md-4">Contact Us</h1>
            <div class="col-12 order-2 order-md-1 col-md-6 mt-4 mt-md-0">
              <form class="cd-form floating-labels" name="contact" netlify-honeypot="bot-field"
                {{action (route-action 'sendContactRequest' model) on="submit"}} netlify>
                  <div class="row">
                    <div class="col-12 d-none bot-field">
                      <label>Donâ€™t fill this out if you're human:
                        <input name="bot-field"></label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-12 col-md-6">
                      <div class="form-group">
                        <label for="firstName">First Name</label>
                        {{input
                            name="firstName"
                            type="text"
                            value=model.firstName
                            class="form-control"
                        }}
                      </div>
                    </div>
                    <div class="col-12 col-md-6">
                      <div class="form-group">
                        <label for="lastName">Last Name</label>
                        {{input
                            name="lastName"
                            type="text"
                            value=model.lastName
                            class="form-control"
                        }}
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-12 col-md-6">
                      <div class="form-group">
                        <label for="email">Email Address</label>
                        {{input
                            name="email"
                            type="email"
                            value=model.email
                            class="form-control"
                        }}
                      </div>
                    </div>
                    <div class="col-12 col-md-6">
                      <div class="form-group">
                        <label for="phone">Phone Number</label>
                        {{input
                            name="phone"
                            placeholder="XXX-XXX-XXXX"
                            type="text"
                            value=model.phone
                            class="form-control"
                        }}
                      </div>
                    </div>
                  </div>
                 <div class="row">
                    <div class="col-12">
                      <div class="form-group">
                        <label for="subject">Subject</label>
                        {{input
                            name="subject"
                            type="text"
                            value=model.subject
                            class="form-control"
                        }}
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-12">
                      <div class="form-group">
                        <label for="message">Message</label>
                        {{textarea
                            name="message"
                            value=model.message
                            rows="4"
                            class="form-control"
                        }}
                      </div>
                    </div>
                  </div>

                <div class="row">
                  <div class="col-12">
                    <div class="form-group">
                      <button type="submit" class="btn btn-pink"
                        disabled={{v-get model 'isTruelyInvalid'}}>Submit</button>
                    </div>
                  </div>
                </div>
                <div class="alerts">
                  <div>
                    {{#each flashMessages.queue as |flash|}}
                      {{flash-message flash=flash}}
                    {{/each}}
                  </div>
                </div>
              </form>
            </div>
            <div class="col-12 order-1 order-md-2 col-md-6">
              <div class="address">
                <b>Prio Wealth Management</b>
                <p>265 Franklin Street <br>
                  Suite 2001 <br>
                  Boston, MA 02110-3199</p>
                  <p>Tel  617.224.1900</p>
              </div>
              <div class="map">
                <p>
                  <iframe src="https://snazzymaps.com/embed/66996" width="100%" height="400px" style="border:none;"></iframe>
                </p>
                <p class="text-right">
                  <a href="https://goo.gl/maps/BBrUQfpcgh92" target="_blank" class="btn btn-small btn-outline-secondary">View Large Map</a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
