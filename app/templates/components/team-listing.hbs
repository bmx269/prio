<div class="team-list">
  <div class="outer">
    <div class="content-wrapper">
      <div class="container-fluid">
        <div class='row'>
          {{#each (sort-by "order" team) as |profile|}}
            <div class='profile'>
              <LinkTo @route="about.member" @model={{profile.dashedTitle}} class="full-name">
                <div class='image text-center' style="{{profile.image.inlineBackground}}">
                  <div class='inner'>
                    <div class="name">
                        {{profile.firstName}} {{#if profile.middleInitial}} {{profile.middleInitial}}{{/if}} {{profile.lastName}}

                        <div class='title'>
                          {{profile.professionalTitle}}
                        </div>
                    </div>
                  </div>
                </div>
              </LinkTo>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>