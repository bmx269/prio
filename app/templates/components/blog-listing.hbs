<div class="blog-list">
  <div class="outer">
    <div class="content-wrapper">
      <div class="container-fluid">
        {{#each (sort-by "date:desc" blogs) as |blog|}}
          <div class="article row">
            <div class="image text-center d-flex align-items-center justify-content-center col-12 col-md-4 col-lg-3">
              {{#if blog.thumbnail}}
                <img src="{{blog.thumbnail.url}}" class="img-fluid">
              {{else}}
                <div class="img"></div>
              {{/if}}
            </div>
            <div class="teaser py-3 col-12 col-md-8 col-lg-9">
              <div class="title">
                <div class="date">
                  {{moment-format blog.date 'MMMM D, YYYY'}}
                </div>
                {{#link-to "connections.blogpost" blog.id class="h2"}}{{blog.title}}{{/link-to}}
              </div>
              <div class="intro">
                {{html-safe blog.intro.value}}
                {{#link-to "connections.blogpost" blog.id class="more"}}Read More{{/link-to}}
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>