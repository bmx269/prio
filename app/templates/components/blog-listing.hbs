<div class="blog-list">
  <div class="outer">
    <div class="content-wrapper">
      <div class="container-fluid py-5">
        <div class="row">
          <div class="col-md-8">
            {{#each (take 1 (sort-by "date:desc" blogs)) as |blog|}}
              <div class="article mb-3 {{if blog.thumbnail ' background-image'}}" style="{{blog.thumbnail.inlineBackground}}">
                <div class="teaser large p-3">
                  <div class="title">
                    <div class="date">
                      {{moment-format blog.date 'MMMM D, YYYY'}}
                    </div>
                    {{#link-to "connections.blogpost" blog.id class="h2"}}{{blog.title}}{{/link-to}}
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
          <div class="col-md-4">
            {{#each (drop 0 (take 2 (sort-by "date:desc" blogs))) as |blog|}}
              <div class="article mb-3 {{if blog.thumbnail ' background-image'}}" style="{{blog.thumbnail.inlineBackground}}">
                <div class="teaser p-3">
                  <div class="title">
                    <div class="date">
                      {{moment-format blog.date 'MMMM D, YYYY'}}
                    </div>
                    {{#link-to "connections.blogpost" blog.id class="h2"}}{{blog.title}}{{/link-to}}
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
        <div class="d-flex">
          {{#each (drop 0 (sort-by "date:desc" blogs)) as |blog|}}
            <div class="col-md-4">
              <div class="article mb-3 {{if blog.thumbnail ' background-image'}}" style="{{blog.thumbnail.inlineBackground}}">
                <div class="teaser p-3">
                  <div class="title">
                    <div class="date">
                      {{moment-format blog.date 'MMMM D, YYYY'}}
                    </div>
                    {{#link-to "connections.blogpost" blog.id class="h2"}}{{blog.title}}{{/link-to}}
                  </div>
                  <div class="intro">
                    {{html-safe blog.intro.value}}
                    {{#link-to "connections.blogpost" blog.id class="more"}}Read More{{/link-to}}
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>