
<div class="overlay-container">
  <div class="bread-nav">
    <div class="container-fluid">
      <div class='row'>
        {{#link-to 'about.your-team' class='col text-left'}}<i class="fas fa-caret-circle-up"></i> Meet Your Team{{/link-to}}
      </div>
    </div>
  </div>
  <h1 class="text-align-center">Meet Your Team</h1>
  <div class="team-profile">
    <div class="outer">
      <div class="content-wrapper">
        <div class="container-fluid">
          <div class='row profile'>
            <div class='col-12 col-sm-6 col-md-4 col-lg-3'>
              <div class='image'>
                <img src="{{profile.image.url}}" class="profile-pic img-fluid w-100">
              </div>
              <div class='team-list d-none d-sm-block'>
                {{#each (sort-by "lastName" team) as |profile|}}
                  <div class="member">
                    {{#link-to "about.member" profile.dashedTitle class="full-name"}}
                      {{profile.firstName}} {{#if profile.middleInitial}} {{profile.middleInitial}}{{/if}} {{profile.lastName}}
                    {{/link-to}}
                  </div>
                {{/each}}
              </div>
            </div>
            <div class='col'>
              <div class='row personal'>
                <div class="name col-12 col-md-8">
                  <h1>{{profile.firstName}} {{#if profile.middleInitial}} {{profile.middleInitial}}{{/if}} {{profile.lastName}}</h1>
                  <div class='title'>
                    {{profile.professionalTitle}}
                  </div>
                </div>
                <div class="contact text-md-right col-12 col-md-4 ml-auto">
                  {{#if profile.email}}
                    <div class='email'>
                      <a href="mailto:{{profile.email}}">Email {{profile.firstName}}</a>
                    </div>
                  {{/if}}
                  {{#if profile.linkedin}}
                    <div class='linkedin'>
                      <a href="{{profile.linkedin}}" target="_blank">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" width="20px" height="20px">
                          <path d="M416 32H31.9C14.3 32 0 46.5 0 64.3v383.4C0 465.5 14.3 480 31.9 480H416c17.6 0 32-14.5 32-32.3V64.3c0-17.8-14.4-32.3-32-32.3zM135.4 416H69V202.2h66.5V416zm-33.2-243c-21.3 0-38.5-17.3-38.5-38.5S80.9 96 102.2 96c21.2 0 38.5 17.3 38.5 38.5 0 21.3-17.2 38.5-38.5 38.5zm282.1 243h-66.4V312c0-24.8-.5-56.7-34.5-56.7-34.6 0-39.9 27-39.9 54.9V416h-66.4V202.2h63.7v29.2h.9c8.9-16.8 30.6-34.5 62.9-34.5 67.2 0 79.7 44.3 79.7 101.9V416z"/>
                        </svg>
                      </a>
                    </div>
                  {{/if}}
                </div>
              </div>
              {{html-safe profile.body.value}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>